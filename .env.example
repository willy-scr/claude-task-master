# API Keys (Required)
GEMINI_API_KEY=your_gemini_api_key_here  # Format: API key from Google AI Studio
PERPLEXITY_API_KEY=your_perplexity_api_key_here  # Optional, for research-backed features

# Model Configuration
MODEL=gemini-2.0-flash  # Options: gemini-2.0-flash, gemini-2.0-pro
PERPLEXITY_MODEL=sonar-medium-online  # Perplexity model: sonar-small-online, sonar-medium-online, sonar-large-online
MAX_TOKENS=4000  # Maximum tokens for responses
TEMPERATURE=0.7  # Temperature for model responses (0.0-1.0)

# Logging Configuration
DEBUG=false  # Enable debug logging
LOG_LEVEL=info  # Console output level: debug, info, warn, error

# Task Generation Settings
DEFAULT_SUBTASKS=3  # Default subtask count
DEFAULT_PRIORITY=medium  # Default priority

# Project Metadata (Optional)
PROJECT_NAME=My Project  # Project name for metadata
PROJECT_VERSION=1.0.0  # Version for metadata